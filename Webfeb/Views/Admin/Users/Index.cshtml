@model List<Webfeb.Models.Admin.UserViewModel>
@{
    Layout = "~/Views/ShareAdmin/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-sm-12">
        <table class="table table-bordered">
            <tr>
                <td>
                    Username
                </td>
                <td>
                    Email
                </td>
                <td>
                    Email Confirmed
                </td>
                <td>
                    Roles
                </td>
            </tr>
            @foreach (var user in Model)
            {
                    <tr>
                        <td>
                            @user.UserName
                        </td>
                        <td>
                            @user.Email
                        </td>
                        <td>
                            @(user.EmailConfirmed ? "Yes" : "No")
                        </td>
                        <td>
                            @string.Join(", ", user.Roles)
                        </td>
                    </tr>
            }
        </table>
    </div>
</div>